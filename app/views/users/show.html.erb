<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.blogs.any? %>
    <h3><%= @user.blogs.count %>
    <ol class="blogs">
      <%= render @blogs %>
    </ol>
    <% will_pagenate @blogs %>
    <% end %>
  </div>
</div>